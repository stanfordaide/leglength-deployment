# =============================================================================
# Leg Length AI Deployment - Environment Configuration
# =============================================================================
# Copy this file to .env and customize values
#
# PORT SCHEME (9000 series):
#   9010-9019: Orthanc stack
#   9020-9029: Mercure stack
#   9030-9049: Monitoring stack
#   4242: DICOM (standard)

# -----------------------------------------------------------------------------
# WORKFLOW TRACKING (9030-9031)
# -----------------------------------------------------------------------------
WORKFLOW_UI_PORT=9030
WORKFLOW_API_PORT=9031
WORKFLOW_DB_NAME=workflow_tracking
WORKFLOW_DB_USER=workflow
WORKFLOW_DB_PASS=workflow123

# -----------------------------------------------------------------------------
# ORTHANC CONNECTION (for actions like re-route, clear AI output)
# -----------------------------------------------------------------------------
ORTHANC_URL=http://host.docker.internal:9011
ORTHANC_USER=orthanc
ORTHANC_PASS=orthanc

# Orthanc Database (for Grafana dashboards - QI metrics)
ORTHANC_DB_HOST=host.docker.internal
ORTHANC_DB_PORT=9013
ORTHANC_DB_USER=orthanc
ORTHANC_DB_PASS=

# -----------------------------------------------------------------------------
# MERCURE DATABASE (for enriched job tracking)
# Leave empty to disable Mercure integration
#
# To get the password after Mercure installation:
#   sudo cat /opt/mercure/config/db.env
# -----------------------------------------------------------------------------
MERCURE_DB_HOST=host.docker.internal
MERCURE_DB_PORT=9022
MERCURE_DB_NAME=mercure
MERCURE_DB_USER=mercure
MERCURE_DB_PASS=

# -----------------------------------------------------------------------------
# GRAFANA (9032)
# -----------------------------------------------------------------------------
GRAFANA_PORT=9032
GRAFANA_USER=admin
GRAFANA_PASS=admin123

# -----------------------------------------------------------------------------
# PROMETHEUS & METRICS (9033-9037)
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9033
ALERTMANAGER_PORT=9034
NODE_EXPORTER_PORT=9035
CADVISOR_PORT=9036
PUSHGATEWAY_PORT=9037

# -----------------------------------------------------------------------------
# GRAPHITE (9038-9040) - Mercure sends metrics here
# -----------------------------------------------------------------------------
GRAPHITE_PORT=9038
GRAPHITE_PICKLE_PORT=9039
STATSD_PORT=9040

# -----------------------------------------------------------------------------
# SLACK ALERTS (optional)
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts
